# Environment
ENVIRONMENT=production
DEBUG=false

# Database (Railway auto-provides DATABASE_URL)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# Redis (Railway auto-provides REDIS_URL) 
REDIS_URL=redis://host:port/0

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# Security Keys
JWT_SECRET_KEY=your-super-secret-jwt-key-here
SESSION_SECRET_KEY=your-session-secret-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins
CORS_ORIGINS=https://wolfalert.app,https://dev.wolfalert.app

# Content Processing
RSS_FETCH_INTERVAL_HOURS=4
ARTICLE_EXPIRY_DAYS=30
AI_RELEVANCE_THRESHOLD=0.40